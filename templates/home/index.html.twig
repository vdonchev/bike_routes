{% extends '_base.html.twig' %}

{% block body %}
    {% include '_nav.html.twig' with {'user': user} %}

    <div class="container mt-3">

        {% include '_notifications.html.twig' with {'notifications': notifications} %}

        <div class="row">
            <div class="col-12">
                <div class="alert alert-light" role="alert">
                    Общо трасета: <b>{{ routes|length }}</b> <span
                            class="text-muted">(Последно обновяване: {{ last_update }})</span>
                </div>


                <div class="row">

                    {% for route in routes %}
                        {% include '_route.html.twig' with {'route': route, 'class': 'col-md-6 col-12 col-xl-4 col-lg-4'} %}
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}