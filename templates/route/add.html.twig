{% extends '_base.html.twig' %}

{% block body %}

    {% include '_nav.html.twig' with {'user': user} %}

    <div class="container mt-3">

        {% include '_notifications.html.twig' with {'notifications': notifications} %}

        <div class="row">

            <div class="col-lg-6 offset-lg-3">

                <h1 class="h5">Добави трасе</h1>
                <hr>

                <form enctype="multipart/form-data" method="post" action="/route/add"
                      onsubmit='disableButton()'>

                    <div class="mb-3">
                        <label for="route_name" class="form-label">Име</label>
                        <input class="form-control" type="text" name="route_name" id="route_name" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_map" class="form-label">Карта</label>
                        <input class="form-control" type="file" size="32" name="route_map" value=""
                               accept="image/png" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_gpx" class="form-label">GPX файл</label>
                        <input class="form-control" type="file" size="32" name="route_gpx" value=""
                               accept=".gpx" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_url" class="form-label">Garmin URL</label>
                        <input class="form-control" type="text" name="route_url" id="route_url" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_notes" class="form-label">Бележки</label>
                        <textarea class="form-control" type="text" name="route_notes" id="route_notes"
                                  rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="route_difficulty" class="form-label">Трудност</label>
                        <input class="form-control" type="number" min="1" max="10" name="route_difficulty"
                               id="route_difficulty" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_length" class="form-label">Дължина (км)</label>
                        <input class="form-control" type="number" step="0.01" min="1" name="route_length"
                               id="route_length" required>
                    </div>

                    <div class="mb-3">
                        <label for="route_ascent" class="form-label">Денивелация (м)</label>
                        <input class="form-control" type="number" min="1" name="route_ascent"
                               id="route_ascent" required>
                    </div>

                    <div class="mb-3">
                        <input class="form-check-input" type="checkbox" name="route_is_race"
                               id="route_is_race">
                        <label for="route_is_race" class="form-label">Състезатлно трасе?</label>
                    </div>

                    <div class="mb-3">
                        <input class="form-check-input" type="checkbox" name="route_notification"
                               id="route_notification">
                        <label for="route_notification" class="form-label">Изпрати нотификация?</label>
                    </div>

                    <button class="btn btn-info " id="upload-media-btn">Добави</button>

                </form>

            </div>

        </div>

    </div>

{% endblock %}